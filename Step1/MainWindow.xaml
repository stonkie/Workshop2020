<Window x:Class="Step1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="18">
    <Grid>
        <StackPanel>
            <Button Name="Btn_SyncCPU" Click="Btn_SyncCPU_OnClick">Work (CPU-Bound)</Button>
            <Button Name="Btn_SyncIO" Click="Btn_SyncIO_OnClick">Work (IO-Bound)</Button>
            <Button Name="Btn_ThreadCPU" Click="Btn_ThreadCPU_OnClick">Work on a Thread (CPU-Bound)</Button>
            <Button Name="Btn_ThreadIO" Click="Btn_ThreadIO_OnClick">Work on a Thread (IO-Bound)</Button>
            <Button Name="Btn_AsyncCPU" Click="Btn_AsyncCPU_OnClickAsync">Work Async (CPU-Bound)</Button>
            <Button Name="Btn_AsyncIO" Click="Btn_AsyncIO_OnClickAsync">Work Async (IO-Bound)</Button>
            
            <ProgressBar Name="Progress_Main"  Minimum="0" Maximum="100" MinHeight="30px"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
