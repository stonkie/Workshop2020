<Window x:Class="Step3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step3"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200" FontSize="18">
    <Grid>
        <StackPanel>
            <Button Name="Btn_Read" Click="Btn_Read_OnClick">Read BlockChain</Button>
            <Button Name="Btn_Append" Click="Btn_Append_OnClick">Append to BlockChain</Button>
            <Button Name="Btn_AppendOnItsOwnThread" Click="Btn_AppendOnItsOwnThread_OnClick">Append to BlockChain on its own thread</Button>

            <TextBox Name="TBox_Value" MinLines="20" IsReadOnly="true"></TextBox>
        </StackPanel>
    </Grid>
</Window>
