<Window x:Class="Step2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="18">
    <Grid>
        <StackPanel>
            <Button Name="Btn_Start" Click="Btn_Start_OnClick">Start Engine</Button>
            <Button Name="Btn_Refuel" Click="Btn_Refuel_OnClick">Refuel Engine</Button>
            <Button Name="Btn_ForceShutdownAsync" Click="Btn_ForceShutdownAsync_OnClick">Shutdown Engine Async</Button>
            <Button Name="Btn_CarefulShutdownAsync" Click="Btn_CarefulShutdownAsync_OnClick">Careful Shutdown Engine Async</Button>
            <ProgressBar Name="Progress_Main" Visibility="Hidden" Minimum="0" Maximum="100" MinHeight="30px"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
