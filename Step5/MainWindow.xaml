<Window x:Class="Step5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Step5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="18">
    <Grid>
        <StackPanel>
            <Button Name="Btn_GenerateImages" Click="Btn_GenerateImages_OnClick">Generate and Throw Away 100 Images (10MB each)</Button>
            <Button Name="Btn_SomethingUnrelated" Click="Btn_SomethingUnrelated_OnClick">Create One Unrelated Object</Button>

            <TextBox Name="TxtBox_Status" IsReadOnly="true"></TextBox>
        </StackPanel>
    </Grid>
</Window>
